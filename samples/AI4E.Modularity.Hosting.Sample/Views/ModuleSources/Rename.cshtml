@model ModuleSourceRenameModel
@{
    ViewBag.Title = "Rename module source";
}

<div>
    <form asp-action="Rename" method="post" class="container">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ConcurrencyToken" />
        <div class="row">
            <div class="col-sm">
                <label asp-for="Name">Name: </label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Name" />
            </div>

        </div>
        <div class="row">
            <span asp-validation-for="Name"></span>
        </div>

        <div>
            <br />
            <a asp-action="Details" asp-controller="ModuleSources" asp-route-id="@Model.Id" class="btn btn-primary">Cancel</a>
            <input type="submit" value="Speichern" class="btn btn-primary" />
        </div>
    </form>
</div>