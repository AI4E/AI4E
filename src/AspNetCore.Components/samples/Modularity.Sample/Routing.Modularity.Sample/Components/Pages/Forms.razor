@page "/Forms"
@using AI4E.AspNetCore.Components.Forms
@code {
    [Parameter] public Guid Id { get; set; }
    private FormsModel Model { get; set; } = new FormsModel();
    private PluginFormsModel PluginModel { get; set; } = new PluginFormsModel();

    private void ModelSubmit()
    {

    }

    private void PluginModelSubmit()
    {

    }
}

<h3>Forms</h3>

<div class="container">
    <ExtensibleEditForm Model="Model" OnValidSubmit="ModelSubmit">
        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label" for="string">
                String
            </label>
            <div class="col-lg-9">
                <InputText id="string" @bind-Value="Model.String" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label" for="int">
                Int
            </label>
            <div class="col-lg-9">
                <InputNumber id="int" @bind-Value="Model.Int" class="form-control" />
            </div>
        </div>
        <EditFormExtension Model="PluginModel" OnValidSubmit="PluginModelSubmit">
            <ChildContent Context="x">
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label" for="bool">
                        Bool
                    </label>
                    <div class="col-lg-9">
                        <InputCheckbox id="bool" @bind-Value="PluginModel.Bool" class="form-control" />
                    </div>
                </div>
            </ChildContent>
        </EditFormExtension>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label"></label>
            <div class="col-lg-9">
                <input type="reset" value="Reset" class="btn btn-secondary" />
                <input type="submit" value="Place" class="btn btn-primary" />
            </div>
        </div>
    </ExtensibleEditForm>
</div>