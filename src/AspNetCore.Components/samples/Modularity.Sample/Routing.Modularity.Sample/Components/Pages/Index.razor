@page "/"
@functions{
    private EditModel _model = new EditModel();

    private sealed class EditModel
    {
        public string Message { get; set; }
        public int Number { get; set; }
    }
}

<div>
    <EditForm Model="_model">
        <div>
            <label>Message: <InputText @bind-Value="_model.Message" /></label>
        </div>
        <div>
            <label>Number: <InputNumber @bind-Value="_model.Number" /></label>
        </div>
        <div>
            <input type="submit" value="submit" />
        </div>
    </EditForm>
    <IndexViewExtension Message="@_model.Message" Number="_model.Number">
        Child content from the core (non-plugin).
    </IndexViewExtension>
</div>