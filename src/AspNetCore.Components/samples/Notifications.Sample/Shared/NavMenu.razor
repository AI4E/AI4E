<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Notifications.Sample</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="NotificationOverview">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Notification Overview
                <NotificationCount>
                    <Template Context="count">
                        <span style="margin-left:5px">(@FormatNotificationCount(count))</span>
                    </Template>
                </NotificationCount>
            </NavLink>
        </li>

    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    static string FormatNotificationCount(int count)
    {
        if (count > 9)
            return "+";
        return count.ToString();
    }
}
